{
  "elements": [
    {
      "type": "Image",
      "image": "data:image/png;base64,"
    },
    {
      "type": "Label",
      "caption": "NUKI Bridge"
    },
    {
      "type": "Label",
      "caption": " "
    },
    {
      "type": "Label",
      "caption": "This instance integrates the NUKI Bridge into IP-Symcon."
    },
    {
      "type": "Label",
      "caption": "In conjunction with a NUKI Smart Lock, you can unlock and lock your door lock."
    },
    {
      "type": "Label",
      "caption": "For further information, please refer to the documentation or the notes here in the configuration."
    },
    {
      "type": "Label",
      "caption": " "
    },
    {
      "type": "ExpansionPanel",
      "caption": "(0) Instance information",
      "items": [
        {
          "type": "Label",
          "caption": "Symcon version:\t5.1>"
        },
        {
          "type": "Label",
          "caption": "Name:\t\t\tNUKI Bridge"
        },
        {
          "type": "Label",
          "caption": "Version:\t\t\t1.04-1007"
        },
        {
          "type": "Label",
          "caption": "Date:\t\t\tAugust 7, 2019"
        },
        {
          "type": "Label",
          "caption": "Time:\t\t\t18:00"
        },
        {
          "type": "Label",
          "caption": "Developer:\t\tUlrich Bittner"
        },
        {
          "type": "Label",
          "caption": "Prefix:\t\t\tNUKI"
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "(1) Bridge",
      "items": [
        {
          "type": "Image",
          "image": "data:image/png;base64,"
        },
        {
          "type": "Label",
          "caption": "Please refer to the iOS / Android App for the required data."
        },
        {
          "type": "Label",
          "caption": " "
        },
        {
          "type": "Label",
          "caption": "Please enter the IP address of the NUKI Bridge:"
        },
        {
          "type": "ValidationTextBox",
          "name": "BridgeIP",
          "caption": "IP address"
        },
        {
          "type": "Label",
          "caption": "Please enter the port of the NUKI Bridge:"
        },
        {
          "type": "NumberSpinner",
          "name": "BridgePort",
          "caption": "Port"
        },
        {
          "type": "Label",
          "caption": "Please enter the network timeout in milliseconds:"
        },
        {
          "type": "NumberSpinner",
          "name": "Timeout",
          "caption": "Timeout",
          "suffix": "ms"
        },
        {
          "type": "Label",
          "caption": "Please enter the Bridge ID of the NUKI Bridge:"
        },
        {
          "type": "ValidationTextBox",
          "name": "BridgeID",
          "caption": "Bridge ID"
        },
        {
          "type": "Label",
          "caption": "Please enter the API Token of the NUKI Bridge:"
        },
        {
          "type": "PasswordTextBox",
          "name": "BridgeAPIToken",
          "caption": "API Token"
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "(2) Callback",
      "items": [
        {
          "type": "Label",
          "caption": "With a callback you can receive information from this NUKI bridge on this IP-Symcon server."
        },
        {
          "type": "Label",
          "caption": " "
        },
        {
          "type": "Label",
          "caption": "Please select if you want to use a callback:"
        },
        {
          "type": "CheckBox",
          "name": "UseCallback",
          "caption": "Use Callback"
        },
        {
          "type": "Label",
          "caption": " "
        },
        {
          "type": "Label",
          "caption": "The information of the IP-Symcon server socket must be registered on the NUKI Bridge."
        },
        {
          "type": "Label",
          "caption": "Please enter the IP address of this IP-Symcon server:"
        },
        {
          "type": "ValidationTextBox",
          "name": "SocketIP",
          "caption": "IP address"
        },
        {
          "type": "Label",
          "caption": "Please enter the server socket port of this IP-Symcon server:"
        },
        {
          "type": "NumberSpinner",
          "name": "SocketPort",
          "caption": "Server socket port"
        },
        {
          "type": "Label",
          "caption": "Please specify the callback ID for changes or deletions:"
        },
        {
          "type": "NumberSpinner",
          "name": "CallbackID",
          "caption": "Callback ID"
        },
        {
          "type": "Label",
          "caption": " "
        },
        {
          "type": "Label",
          "caption": "After accepting any changes, you can press the (2) CREATE button in the action area to create a callback on the NUKI Bridge."
        },
        {
          "type": "Label",
          "caption": "With the button (2) DISPLAY in the action area you can display the existing callbacks of the NUKI Bridge."
        },
        {
          "type": "Label",
          "caption": "With the button (2) DELETE in the action area you can delete the callback with the specified ID from the NUKI Bridge."
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "ExpansionPanel",
      "caption": "Action area",
      "items": [
        {
          "type": "Label",
          "caption": "(1) Bridge"
        },
        {
          "type": "Button",
          "caption": "Show Info",
          "onClick": "$data=NUKI_GetBridgeInfo($id); print_r(json_decode($data, true));"
        },
        {
          "type": "RowLayout",
          "items": [
            {
              "type": "Button",
              "caption": "Show Log",
              "onClick": "$data=NUKI_GetBridgeLog($id); print_r(json_decode($data, true));"
            },
            {
              "type": "Button",
              "caption": "Delete Log",
              "onClick": "NUKI_ClearBridgeLog($id);"
            }
          ]
        },
        {
          "type": "PopupButton",
          "caption": "Update firmware",
          "popup": {
            "caption": "Do you really want to update the firmware?",
            "items": [
              {
                "type": "Button",
                "caption": "Update firmware",
                "onClick": "NUKI_UpdateBridgeFirmware($id);"
              }
            ]
          }
        },

        {
          "type": "PopupButton",
          "caption": "Reboot",
          "popup": {
            "caption": "Do you really want to reboot the device?",
            "items": [
              {
                "type": "Button",
                "caption": "Reboot",
                "onClick": "NUKI_RebootBridge($id);"
              }
            ]
          }
        },
        {
          "type": "PopupButton",
          "caption": "Factory Reset",
          "popup": {
            "caption": "Do you really want to perform a factory reset?",
            "items": [
              {
                "type": "Button",
                "caption": "Factory Reset",
                "onClick": "NUKI_FactoryResetBridge($id);"
              }
            ]
          }
        },
        {
          "type": "RowLayout",
          "items": [
            {
              "type": "Button",
              "caption": "Show Smart Locks",
              "onClick": "$data=NUKI_GetSmartLocks($id); print_r(json_decode($data, true));"
            }
          ]
        },
        {
          "type": "Label",
          "caption": "(2) Callback"
        },
        {
          "type": "RowLayout",
          "items": [
            {
              "type": "PopupButton",
              "caption": "Add",
              "popup": {
                "caption": "Do you really want to add a callback?",
                "items": [
                  {
                    "type": "Button",
                    "caption": "Add",
                    "onClick": "$data=NUKI_AddCallback($id);  print_r(json_decode($data, true));"
                  }
                ]
              }
            },
            {
              "type": "Button",
              "caption": "List",
              "onClick": "$data=NUKI_ListCallback($id); print_r(json_decode($data, true));"
            },
            {
              "type": "PopupButton",
              "caption": "Delete",
              "popup": {
                "caption": "Do you really want to delete the callback?",
                "items": [
                  {
                    "type": "Button",
                    "caption": "Delete",
                    "onClick": "$callbackID = IPS_GetProperty($id,'CallbackID'); $data=NUKI_DeleteCallback($id, $callbackID); print_r(json_decode($data, true));"
                  }
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "type": "Label",
      "caption": " "
    },
    {
      "type": "Button",
      "caption": "Manual",
      "onClick": "echo 'https://github.com/ubittner/SymconNUKI';"
    }
  ],
  "status": [
    {
      "code": 101,
      "icon": "active",
      "caption": "NUKI Bridge will be created"
    },
    {
      "code": 102,
      "icon": "active",
      "caption": "NUKI Bridge is active"
    },
    {
      "code": 103,
      "icon": "active",
      "caption": "NUKI Bridge will be deleted"
    },
    {
      "code": 104,
      "icon": "inactive",
      "caption": "Please edit all configuration parameters of the NUKI Bridge."
    },
    {
      "code": 201,
      "icon": "error",
      "caption": "NUKI Bridge configuration has an error!"
    },
    {
      "code": 299,
      "icon": "error",
      "caption": "An unknown error has occurred!"
    }
  ]
}
